{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@vura/*": ["../../packages/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next", "coverage"]
}
